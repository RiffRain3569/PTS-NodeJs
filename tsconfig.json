{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", "**/*.ts", "src/*/*.d.ts"],
    "exclude": ["node_modules"]
}
